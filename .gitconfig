[user]
email = kkwak@pm.com
name = kkwak

[core]
pager = cat

[alias]
co = checkout
cp = cherry-pick
br = branch
ci = commit	
st = status
cg = config --global -e
df = diff --ignore-space-at-eol -b -w 
spull = !git-svn fetch && git-svn rebase
spush = !git-svn dcommit
lg = log -25 --graph --pretty=format:'%Cred%h%Creset - %Cgreen%cr%Creset | %C(yellow)%d%Creset %s %C(bold yellow)[%an]%Creset' --abbrev-commit --date=short
tidy = !git fsck --unreachable && git reflog expire --expire=0 --all && git repack --max-pack-size=100M -a -d -l && git prune && git gc --aggressive
mt = mergetool

[credential]
helper = osxkeychain

[merge]
tool = bc3

[mergetool]
prompt = false
keepBackup = false

[diff]
tool = bc3

[difftool]
prompt = false

[push]
default = current

[pull]
default = simple
rebase = true

[branch]
autosetupmerge = true
autosetuprebase = always

